@model List<GM.Core.Application.Contracts.GuideAgg.GuideVm>
@{
    ViewData["title"] = "لیست راهنما";
}




<div class="row mt-5">
    <div class="col-sm-12">
        <h4 class="page-title pull-right">@ViewData["title"]</h4>
        <p class="pull-left">
            <a class="btn btn-success btn-lg"
               href="#showmodal=@Url.Action("Create","Guide")">
                ایجاد راهنمای جدید
            </a>
        </p>
    </div>
</div>

<div class="align-content-center d-flex justify-content-center text-center mb-5 row">
    <div class="col-12">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>نام</th>
                    <th>دسته</th>
                    <th>وضعیت</th>
                    <th>تاریخ ایجاد</th>
                    <th>عملیات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="pt-4 text-center">@item.Id</td>
                        <td class="pt-4 text-center">@item.Title</td>
                        <td class="pt-4 text-center">@item.CategoryName</td>
                        <td class="text-center">
                            @if (!item.IsRemoved)
                            {
                                <i class="fa fa-check fa-3x text-success"></i>
                            }
                            else
                            {
                                <i class="fa fa-remove fa-3x text-danger"></i>
                            }
                        </td>
                        <td class="pt-4 text-center">@item.CreationDate</td>

                        <td class="">

                            
                            <div class="dropdown">
                                <a href="" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="true" data-bs-display="static"><i class="bi bi-three-dots text-black-50"></i></a>
                                <ul class="dropdown-menu dropdown-menu-lg-left">
                                    <li>
                                        <a class="dropdown-item pl-2 pr-2"
                                           asp-controller="Guide" asp-action="Details" asp-route-id="@item.Id">
                                            <i class="bi bi-view-list float-left"></i><p class="d-flex m-0">نمایش راهنما</p>
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item pl-2 pr-2"
                                           href="#showmodal=@Url.Action("Edit","Guide", new { id = item.Id })">
                                            <i class="fa fa-edit float-left"></i><p class="d-flex m-0">ویرایش راهنما</p>
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        @if (!item.IsRemoved)
                                        {
                                            <a class="dropdown-item  pl-2 pr-2"
                                               asp-controller="Guide" asp-action="Remove" asp-route-id="@item.Id">
                                                <i class="fa fa-remove float-left"></i><p class="d-flex m-0">غیر فعال کردن راهنما</p>
                                            </a>
                                        }
                                        else
                                        {

                                            <a class="dropdown-item  pl-2 pr-2"
                                               asp-controller="Guide" asp-action="Restor" asp-route-id="@item.Id">
                                                <i class="fa fa-check float-left"></i><p class="d-flex m-0">فعال کردن راهنما</p>
                                            </a>
                                        }
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item pl-2 pr-2"
                                           href="#showmodal=@Url.Action("Delete","Guide", new { id = item.Id })">
                                            <i class="fa fa-trash-o float-left"></i><p class="d-flex m-0">حذف راهنما</p>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


