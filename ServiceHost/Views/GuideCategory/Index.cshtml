@model List<GM.Core.Application.Contracts.GuideCategoryAgg.GuideCategoryVm>
@{
    ViewData["title"] = "لیست گروه راهنما";
}


<div class="row mt-5">
    <div class="col-sm-12">
        <h4 class="page-title pull-right">@ViewData["title"]</h4>
        <p class="pull-left">
            <a class="btn btn-success btn-lg"
               href="#showmodal=@Url.Action("Create","GuideCategory")">
                ایجاد گروه راهنمای جدید
            </a>
        </p>
    </div>
</div>


<div class="align-content-center d-flex justify-content-center text-center mb-5 row">
    <div class="col-12">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>نام</th>
                    <th>وضعیت</th>
                    <th>تاریخ ایجاد</th>
                    <th>عملیات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="pt-4 text-center">@item.Id</td>
                        <td class="pt-4 text-center">@item.Name</td>
                        <td class="text-center">
                            @if (!item.IsRemoved)
                            {
                                <i class="fa fa-check fa-3x text-success"></i>
                            }
                            else
                            {
                                <i class="fa fa-remove fa-3x text-danger"></i>
                            }
                        </td>
                        <td class="pt-4 text-center">@item.CreationDate</td>
                        <td class="">
                            <div class="dropdown">
                                <a href="" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="true" data-bs-display="static"><i class="bi bi-three-dots text-black-50"></i></a>
                                <ul class="dropdown-menu dropdown-menu-lg-left">

                                    <li>
                                        <a class="dropdown-item pl-2 pr-2"
                                           href="#showmodal=@Url.Action("Edit","GuideCategory", new { id = item.Id })">
                                            <i class="fa fa-edit float-left"></i><p class="d-flex m-0">ویرایش گروه</p>
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        @if (!item.IsRemoved)
                                        {
                                            <a class="dropdown-item  pl-2 pr-2"
                                               asp-controller="GuideCategory" asp-action="Remove" asp-route-id="@item.Id">
                                                <i class="fa fa-remove float-left"></i><p class="d-flex m-0">غیر فعال کردن گروه</p>
                                            </a>
                                        }
                                        else
                                        {

                                            <a class="dropdown-item  pl-2 pr-2"
                                               asp-controller="GuideCategory" asp-action="Restor" asp-route-id="@item.Id">
                                                <i class="fa fa-check float-left"></i><p class="d-flex m-0">فعال کردن گروه</p>
                                            </a>
                                        }
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item pl-2 pr-2"
                                           href="#showmodal=@Url.Action("Delete","GuideCategory", new { id = item.Id })">
                                            <i class="fa fa-trash-o float-left"></i><p class="d-flex m-0">حذف گروه</p>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>




