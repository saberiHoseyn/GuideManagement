@model GM.Core.Application.Contracts.GuideCategoryAgg.EditGuideCategoryModel
@{
    Layout = null;
}

<div class="modal-header d-flex justify-content-between">
    <h4 class="modal-title">ویرایش گروه راهنمای: @Model.Name</h4>
    <button type="button" class="close ml-0" data-dismiss="modal" aria-hidden="true">×</button>
</div>

<form asp-controller="GuideCategory" asp-action="Edit"
      dir="rtl"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body text-right">
        <div class="row">
            <div class="col">
                <div class="form-group">
                    <label asp-for="Name" class="control-label">عنوان</label>
                    <input type="text" class="form-control" asp-for="Name">
                    <span asp-validation-for="Name" class="error text-danger small"></span>
                </div>
            </div>
            <input type="hidden" asp-for="Id" value="@Model.Id" />
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
            <button type="submit" class="btn btn-warning waves-effect waves-light">ویرایش</button>
        </div>
    </div>
</form>

